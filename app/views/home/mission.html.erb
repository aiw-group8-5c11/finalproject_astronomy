<div class="page_title2">
  <div class="container">

    <div class="title"><h1>Nhiệm vụ thăm dò</h1></div>

    <div class="pagenation">&nbsp;<a href="index.html">Home</a> <i>/</i> <a href="news.html">Tin tức</a>  <i>/</i> Nhiệm vụ thăm dò</div>

  </div>
</div><!-- end page title -->


<div class="clearfix margin_top7"></div>

<div class="container">

  <div class="one_full">

    <ul class="tabs" id="tabs_items">
      <% @mission.each do |item_name| %>
      <li><a href="#demo-tab-<%= item_name.id %>" target="_self"><%= item_name.name %></a></li>
    <% end %>
    </ul>

    <div class="tabs-content">
    <% @mission.each do |item| %>
        <div id="demo-tab-<%= item.id %>" class="tabs-panel">

          <h3><%= item.name %></h3>
          <p><i class="fa fa-chevron-circle-right"></i> <strong>Ngày phóng: </strong><%= item.launch_date %></p>
          <p><i class="fa fa-chevron-circle-right"></i> <strong>Ngày lên quỹ đạo: </strong><%= item.active_date %></p>
          <p><i class="fa fa-chevron-circle-right"></i> <strong>Hành tinh thăm dò: </strong><%= item.element.name %></p>
          <p><i class="fa fa-chevron-circle-right"></i> <strong>Mô tả: </strong> <%= item.description %></p>
          <p><i class="fa fa-chevron-circle-right"></i> <strong>Liên kết: </strong></p>
          <p>
            <ol>
              <% item.lienkets.each do |lket| %>
                  <li><a href="<%= lket.url %>"><%= lket.name %></a></li>
              <% end %>
            </ol>
          </p>

          <br><br>
          <div id="carousel-example-generic<%= item.id %>" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#carousel-example-generic<%= item.id %>" data-slide-to="0" class="active"></li>
              <li data-target="#carousel-example-generic<%= item.id %>" data-slide-to="1"></li>
              <li data-target="#carousel-example-generic<%= item.id %>" data-slide-to="2"></li>
              <li data-target="#carousel-example-generic<%= item.id %>" data-slide-to="3"></li>



            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">


              <% item.images.each do |imag| %>
              <div class="item">
                <img src="<%= imag.attachment_url %>" alt="" />
              </div>

              <% end %>
            </div>
        <%= javascript_tag do %>

              $("div.item:first-child").addClass("active");

        <% end %>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic<%= item.id %>" role="button" data-slide="prev">
              <span class="slide-right default" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic<%= item.id %>" role="button" data-slide="next">
              <span class="slide-right default" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

        </div><!-- end tab 1 -->
    <% end%>


    </div>

  </div>
</div>
<div class="clearfix margin_top4"></div>
