<div class="comment_form">

  <h4>Ý kiến của bạn</h4>

  <form action="#" method="post">
    <% if user_signed_in? %>
        <a href="#"></a><i><%= current_user.email %></i></a>
        <textarea name="comment" class="comment_textarea_bg" rows="5"></textarea>
        <div class="clearfix"></div>
        <input name="send" type="submit" value="Gửi đi" class="comment_submit"/>
        <p></p>
        <p class="comment_checkbox"><input type="checkbox" name="check" /> Gửi thông báo cho tôi qua email.</p>
    <% else %>
        <p>Bạn có muốn đăng nhập? <%= link_to 'Login', new_user_session_path %></p>
        <input type="text" name="yourname" id="name" class="comment_input_bg" />
        <label for="name">Tên*</label>

        <input type="text" name="email" id="mail" class="comment_input_bg" />
